<com.thefuntasty.hauler.HaulerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:dragDismissScale="1"
    android:id="@+id/haulerView"
    android:layout_width="match_parent"
    android:background="@color/fox_background"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="@color/fox_background"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?bigActionBarHeight"
            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/bigToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/fox_title_solid_bg"
                android:background="@color/fox_title_solid_bg"
                app:expandedTitleTextAppearance="@style/ThemeToolbarTextBig"
                app:expandedTitleMarginStart="20dp"
                app:collapsedTitleTextAppearance="@style/ThemeToolbarText"
                app:expandedTitleMarginEnd="20dp"
                app:expandedTitleMarginBottom="20dp"
                >
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/appToolbar"
                    style="@style/ThemeToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="0dp"
                    app:layout_collapseMode="pin" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <FrameLayout
                    android:id="@+id/settingsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</com.thefuntasty.hauler.HaulerView>