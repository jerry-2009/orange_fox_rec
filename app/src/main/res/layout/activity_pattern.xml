<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fox_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/patternPlace"
        android:layout_width="288dp"
        android:layout_height="288dp"
        android:layout_gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:divider="@drawable/divider"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/mode3"
            style="@style/ThemeButtonOutline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/fox_background"
            android:padding="8dp"
            android:text="3x3" />

        <Button
            android:id="@+id/mode4"
            style="@style/ThemeButtonOutline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/fox_background"
            android:padding="8dp"
            android:text="4x4" />

        <Button
            android:id="@+id/mode5"
            style="@style/ThemeButtonOutline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/fox_background"
            android:padding="8dp"
            android:text="5x5" />
    </LinearLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appToolbar"
        style="@style/ThemeToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/elevation_medium"
        app:titleTextAppearance="@style/ThemeToolbarText" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>