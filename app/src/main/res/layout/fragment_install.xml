<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fox_bright"
    android:fitsSystemWindows="true"
    tools:context=".ui.nav.InstallFragment">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/installButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|center"
        android:text="Install R11.0_1 Stable"
        style="@style/ThemeButtonInstall"/>

    <ImageView android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fox_main_gradient"/>

    <TextView android:id="@+id/ofTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/euclid_flex"
        android:text="OrangeFox Recovery"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <ScrollView
        android:id="@+id/scrollCards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:layout_anchorGravity="center">

        <LinearLayout
            android:id="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:paddingBottom="150dp"
            android:animateLayoutChanges="true"
            android:showDividers="beginning|middle|end">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardError"
                style="@style/ThemeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="2dp">

                    <ImageView
                        android:id="@+id/cardErrorIcon"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_round_public_off_24"
                        android:tint="@color/google_gray" />

                    <TextView
                        android:id="@+id/cardErrorTitle"
                        style="@style/ThemeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/err_card_no_internet"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/cardErrorText"
                        style="@style/ThemeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:text="@string/err_no_internet"
                        android:textAlignment="center" />

                    <Button
                        android:id="@+id/btnRefresh"
                        style="@style/ThemeButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/err_card_try_again"
                        app:icon="@drawable/ic_round_refresh_24" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:divider="@drawable/divider"
                tools:visibility="gone"
                android:showDividers="beginning|middle|end">
                <com.facebook.shimmer.ShimmerFrameLayout
                    style="@style/ThemeShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        style="@style/ThemeCard"
                        android:layout_width="match_parent"
                        android:layout_height="216dp"
                        android:layout_weight="1"/>
                </com.facebook.shimmer.ShimmerFrameLayout>
                <com.facebook.shimmer.ShimmerFrameLayout
                    style="@style/ThemeShimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        style="@style/ThemeCard"
                        android:layout_width="match_parent"
                        android:layout_height="216dp"
                        android:layout_weight="1"/>
                </com.facebook.shimmer.ShimmerFrameLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardInfo"
                style="@style/ThemeCard"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|top"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_device"
                    android:tint="@color/google_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ThemeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="@string/dev_info" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:shrinkColumns="all">

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/dev_model" />

                                <TextView
                                    android:id="@+id/devModel"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/dev_code" />

                                <TextView
                                    android:id="@+id/devCode"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/dev_maintainer" />

                                <TextView
                                    android:id="@+id/devMaintainer"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/dev_status" />

                                <TextView
                                    android:id="@+id/devStatus"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/dev_patch" />

                                <TextView
                                    android:id="@+id/devPatch"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRelease"
                style="@style/ThemeCard"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right|top"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_outline_new_releases_24"
                    android:tint="@color/google_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ThemeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="@string/rel_current" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:shrinkColumns="all">

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/rel_vers" />

                                <TextView
                                    android:id="@+id/relVers"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/rel_type" />

                                <TextView
                                    android:id="@+id/relType"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/rel_date" />

                                <TextView
                                    android:id="@+id/relDate"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    style="@style/ThemeTextGray"
                                    android:layout_weight="0"
                                    android:text="@string/rel_size" />

                                <TextView
                                    android:id="@+id/relSize"
                                    style="@style/ThemeTextBold"
                                    android:layout_weight="1"
                                    android:text="..." />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider"
                        android:orientation="horizontal"
                        android:paddingTop="16dp"
                        android:paddingBottom="2dp"
                        android:showDividers="middle">

                        <Button
                            android:id="@+id/oldReleases"
                            style="@style/ThemeButtonOutline"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/fox_card"
                            android:text="@string/rel_more"
                            app:icon="@drawable/ic_widget" />

                        <Button
                            android:id="@+id/releaseInfo"
                            style="@style/ThemeButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/rel_button"
                            app:icon="@drawable/ic_outline_info_24" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>