<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fox_bright"
    android:fitsSystemWindows="true"
    tools:context=".ui.install.InstallFragment">

    <Button
        android:id="@+id/installButton"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        style="@style/Theme.OrangeFox.Install"
        android:text="Install R11.0_2 Stable" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fox_main_gradient" />

    <TextView
        android:id="@+id/ofTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/euclid_flex"
        android:text="OrangeFox Recovery"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/imageView3"
        app:layout_anchorGravity="center">

        <LinearLayout
            android:id="@+id/layoutCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:paddingBottom="72dp"
            android:showDividers="middle|end">

            <androidx.cardview.widget.CardView
                style="@style/Theme.OrangeFox.Card"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_marginTop="72dp" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Device\nModel: ASUS etc...\nCodename: x00t"
                    android:textSize="18sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/Theme.OrangeFox.Card"
                android:layout_width="match_parent"
                android:layout_height="216dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:divider="@drawable/divider"
                    android:showDividers="middle"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom|center|right|center_horizontal">
                    <Button
                        android:id="@+id/otherReleases"
                        style="@style/Theme.OrangeFox.Button.Outline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rel_more"
                        app:icon="@drawable/ic_widget" />
                    <Button
                        android:id="@+id/releaseInfo"
                        style="@style/Theme.OrangeFox.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rel_button"
                        app:icon="@drawable/ic_outline_info_24" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Theme.OrangeFox.Title"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>