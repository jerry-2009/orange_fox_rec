<resources>
    <style name="ThemeSheet" parent="ThemeSheetBase">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="contentPaddingBottom">20dp</item>
    </style>

    <style name="ThemeSheetNoPadding" parent="ThemeSheet">
        <item name="contentPadding">0dp</item>
        <item name="contentPaddingBottom">24dp</item>
    </style>

    <style name="ShapeTopRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ThemeBottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThemeBottomSheetStyle</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ThemeTitleHideable" parent="ThemeTitle">
        <item name="android:visibility">gone</item>
    </style>
</resources>