<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrangeFox" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fox_accent</item>
        <item name="colorPrimaryVariant">@color/fox_bright</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fox_accent</item>
        <item name="colorSecondaryVariant">@color/fox_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/fox_status_solid_bg</item>
        <item name="android:windowBackground">@color/fox_background</item>
    </style>

    <style name="Theme.OrangeFox.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OrangeFox.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OrangeFox.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.OrangeFox.Card">
        <item name="cardBackgroundColor">#FF242528</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>
</resources>