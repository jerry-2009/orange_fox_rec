<resources>
    <style name="Theme.OrangeFox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fox_accent</item>
        <item name="colorPrimaryVariant">@color/fox_bright</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fox_accent</item>
        <item name="colorSecondaryVariant">@color/fox_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/fox_status_solid_bg</item>
        <item name="android:windowBackground">@color/fox_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="alertDialogTheme">@style/ThemeDialog</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Theme.OrangeFox.Activity">
        <item name="android:statusBarColor">@color/fox_status_solid_bg</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_round_close_24</item>
        <item name="preferenceCategoryStyle">@style/ThemePrefCategory</item>
        <item name="colorControlNormal">@color/google_gray</item>
    </style>

    <style name="ThemeCard">
        <item name="cardBackgroundColor">@color/fox_card</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">@dimen/elevation_low</item>
        <item name="contentPadding">10dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <style name="ThemeCardOutline" parent="ThemeCard">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/fox_outline</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ThemeShimmer">
        <item name="shimmer_highlight_color">@color/fox_card_shimmer</item>
        <item name="shimmer_base_color">@color/fox_card</item>
        <item name="shimmer_base_alpha">0.8</item>
        <item name="shimmer_highlight_alpha">0.5</item>
        <item name="shimmer_colored">true</item>
    </style>

    <style name="ThemeToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/fox_accent</item>
        <item name="colorAccent">@color/fox_accent</item>
    </style>

    <style name="ThemeToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/euclid_flex</item>
    </style>

    <style name="ThemeToolbarStyle">
        <item name="android:theme">@style/ThemeToolbar</item>
        <item name="android:background">@color/fox_title_solid_bg</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ThemeTabsHl">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="ThemeTabs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/fox_title_solid_bg</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:defaultFocusHighlightEnabled">false</item>
        <item name="android:theme">@style/ThemeTabsHl</item>
        <item name="stl_defaultTabTextColor">@color/white</item>
        <item name="stl_defaultTabTextHorizontalPadding">18dp</item>
        <item name="stl_dividerColor">@android:color/transparent</item>
        <item name="stl_dividerThickness">0dp</item>
        <item name="stl_indicatorColor">@color/tab_selected</item>
        <item name="stl_indicatorCornerRadius">18dp</item>
        <item name="stl_indicatorGravity">center</item>
        <item name="stl_indicatorInterpolation">linear</item>
        <item name="stl_indicatorThickness">36dp</item>
        <item name="stl_underlineColor">@android:color/transparent</item>
        <item name="stl_underlineThickness">0dp</item>
    </style>

    <style name="ThemeButtonInstall" parent="ThemeButtonBasic">
        <item name="icon">@drawable/ic_round_save_alt_24</item>
    </style>

    <style name="ThemeButtonBasic">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/euclid_flex</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:singleLine">true</item>
        <item name="iconTint">@color/fox_background</item>
    </style>

    <style name="ThemeButton" parent="ThemeButtonBasic">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ThemeButtonDialog" parent="ThemeButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="ThemeButtonDialogOutline" parent="ThemeButtonOutline">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="ThemeButtonOutline" parent="ThemeButton">
        <item name="android:textColor">@color/fox_accent</item>
        <item name="iconTint">@color/fox_accent</item>
        <item name="strokeColor">@color/fox_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ThemeTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/euclid_flex</item>
    </style>

    <style name="ThemeTitleHideable" parent="ThemeTitle"/>

    <style name="ThemeSheetNoPadding" parent="ThemeSheet">
        <item name="contentPadding">-8dp</item>
    </style>

    <style name="ThemeText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="ThemeTextGray" parent="ThemeText">
        <item name="android:textColor">@color/google_gray</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="ThemeTextBold" parent="ThemeText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ThemeDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/euclid_flex</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/fox_accent</item>
    </style>

    <style name="ThemeDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@color/fox_card</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorAccent">@color/white</item>

        <item name="dialogCornerRadius">8dp</item>
        <item name="colorPrimary">@color/fox_card</item>
        <item name="buttonBarButtonStyle">@style/ThemeDialogButton</item>

        <!-- просто блять почему -->
        <item name="android:fullDark">@color/fox_card</item>
        <item name="android:topDark">@color/fox_card</item>
        <item name="android:centerDark">@color/fox_card</item>
        <item name="android:bottomDark">@color/fox_card</item>
        <item name="android:fullBright">@color/fox_card</item>
        <item name="android:topBright">@color/fox_card</item>
        <item name="android:centerBright">@color/fox_card</item>
        <item name="android:bottomBright">@color/fox_card</item>
        <item name="android:bottomMedium">@color/fox_card</item>
        <item name="android:centerMedium">@color/fox_card</item>
    </style>

    <style name="ThemeBottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThemeBottomSheetStyle</item>
        <item name="android:navigationBarColor">@color/fox_card</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ThemeBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemePrefCategory" parent="Preference.Category">
        <item name="android:layout">@layout/pref_category</item>
    </style>

    <style name="ThemeSheetBase">
        <item name="android:layout_gravity">bottom|center</item>
        <item name="cardBackgroundColor">@color/fox_card</item>
        <item name="contentPadding">26dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="cardElevation">@dimen/elevation_high</item>
        <item name="android:layout_width">match_parent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeTopRounded</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ThemeSheet" parent="ThemeSheetBase">
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingTop">0dp</item>
    </style>

    <style name="ShapeTopRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="ThemeList">
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:layout_marginHorizontal">32dp</item>
    </style>

    <style name="ThemePopup" parent="Widget.AppCompat.PopupMenu">
        <item name="popupMenuBackground">@drawable/popup_bg</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>